head(ng-controller="PageHeaderController as page")
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
  meta(name='viewport', content='width=device-width,initial-scale=1')

  base(href="/")

  title(ng-bind="page.header.title")
  meta(http-equiv='Content-type', content='text/html;charset=UTF-8')
  meta(name="description", content="{{page.header.description}}")
  meta(name="keywords", content="{{page.header.keywords}}")

  link(href='/assets/img/icons/favicon.ico', rel='shortcut icon', type='image/x-icon')
  
  meta(property='og:title', content='{{page.header.title}}')
  meta(property='og:description', content='{{page.header.description}}')
  meta(property='og:type', content='website')
  meta(property='og:site_name', content='{{page.header.siteName}}')

  each asset in assets.vendor.css
    link(rel='stylesheet', href=asset)
  
  each asset in assets.client.css
    link(rel='stylesheet', href=asset)